doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      a(href='/')
        img(src='../images/logo.svg', alt='Board')
      if user
        nav
          a(href='#')= user.fname
          a(href="/logout") Logout
      else
        nav
          a(href='/sign-up') Sign Up
          a(href="/login") Login
    block content
